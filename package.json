{
  "name": "zmk-tray",
  "version": "1.0.0",
  "description": "zmk tray indicator",
  "type": "module",
  "main": "build/main.js",
  "gypfile": true,
  "scripts": {
    "build": "rm -rf build && tsc && cp -r src/assets build/",
    "prestart": "npm run build",
    "start": "electron .",
    "precompile": "npm run build",
    "compile:win": "electron-packager . --platform=win32 --arch=x64 --out=out --overwrite --icon=src/assets/icons/app/zmk-tray.ico",
    "compile:mac": "electron-packager . --platform=darwin --arch=x64 --out=out --overwrite --icon=src/assets/icons/app/zmk-tray.icns",
    "lint": "eslint . --ext .js,.ts",
    "lint:fix": "eslint . --fix --ext .js,.ts"
  },
  "keywords": [
    "zmk",
    "keyboard",
    "tray",
    "indicator"
  ],
  "author": "equiman",
  "license": "MIT",
  "devDependencies": {
    "@electron/packager": "18.1.3",
    "@typescript-eslint/eslint-plugin": "7.0.1",
    "electron": "28.2.2",
    "electron-packager": "17.1.2",
    "eslint": "8.56.0",
    "eslint-config-standard-with-typescript": "43.0.1",
    "eslint-plugin-import": "2.29.1",
    "eslint-plugin-n": "16.6.2",
    "eslint-plugin-promise": "6.1.1",
    "typescript": "5.3.3"
  },
  "swpm": "npm",
  "dependencies": {
    "electron-store": "8.1.0",
    "node-addon-api": "7.1.0"
  }
}